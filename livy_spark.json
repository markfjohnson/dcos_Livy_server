{
  "id": "/livy_spark",
  "backoffFactor": 1.15,
  "backoffSeconds": 1,
  "cmd": "/sbin/init.sh",
  "container": {
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "mganta/livy2-docker",
      "forcePullImage": true,
      "privileged": false,
      "portMappings": [
            {
                "containerPort": 8998,
                "hostPort": 0,
                "name": "livy",
                "protocol": "tcp",
                "servicePort": 10007
            },
            {
                "containerPort": 4040,
                "hostPort": 0,
                "name": "sparkui",
                "protocol": "tcp",
                "servicePort": 10008
                } 
        ],     
      "parameters": [
        {
          "key": "user",
          "value": "nobody"
        }
      ]
    }
  },
  "cpus": 1,
  "disk": 0,
  "env": {
    "DCOS_SERVICE_NAME": "spark",
    "NO_BOOTSTRAP": "true",
    "SPARK_DISPATCHER_MESOS_ROLE": "*",
    "SPARK_USER": "nobody",
    "SPARK_LOG_LEVEL": "INFO"
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 5,
      "ignoreHttp1xx": false,
      "intervalSeconds": 60,
      "maxConsecutiveFailures": 3,
      "portIndex": 2,
      "timeoutSeconds": 10,
      "delaySeconds": 15,
      "protocol": "HTTP",
      "path": "/"
    }
  ],
  "instances": 1,
   "labels": {
        "DCOS_SERVICE_NAME": "livy-spark2",
        "DCOS_SERVICE_PORT_INDEX": "0",
        "DCOS_SERVICE_SCHEME": "http"
    },
  "maxLaunchDelaySeconds": 3600,
  "mem": 1024,
  "gpus": 0,
  "networks": [
    {
      "mode": "host"
    }
  ],
  "portDefinitions": [
    {
      "protocol": "tcp",
      "port": 10000
    },
    {
      "protocol": "tcp",
      "port": 10001
    },
    {
      "protocol": "tcp",
      "port": 10002
    }
  ],
  "requirePorts": false,
  "upgradeStrategy": {
    "maximumOverCapacity": 1,
    "minimumHealthCapacity": 1
  },
  "user": "nobody",
  "killSelection": "YOUNGEST_FIRST",
  "unreachableStrategy": {
    "inactiveAfterSeconds": 0,
    "expungeAfterSeconds": 0
  },
  "fetch": [],
  "constraints": []
}